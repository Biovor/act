
{% if browser == 'Edge/IE' %}
    <div class="slider slideHomeDiv hide-on-small-only hide-on-med-only">
        <ul class="slides slideHomeImg">
            {% for photo in photos %}
                <li>
                    <img src="{{ asset('img/'~photo.picture.pictureName) }}" alt="{{ photo.picture.alt }}">
                    <div class="caption center-align">

                        <a href="{{ photo.url }}"><h2>{{ photo.title |raw }}</h2></a>
                        <h4>{{ photo.text | raw }}</h4>

                        <a href="{{ photo.url }}" class="btn blue">{{ photo.nameUrl }}</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

{% else %}
    <div class="video-container hide-on-small-only hide-on-med-only">
        <div class="slider fullscreen">
            <ul class="slides">
                {% for video in videos %}
                    <li>
                        <video autoplay muted loop>
                            <source src="{{ asset('img/'~video.picture.pictureName) }}" type="video/mp4">
                        </video>

                        <div class="caption center-align">

                            <a href="{{ video.url }}"><h2>{{ video.title |raw }}</h2></a>
                            <h4>{{ video.text | raw }}</h4>

                            <a href="{{ video.url }}" class="btn blue">{{ video.nameUrl }}</a>
                        </div>

                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}


